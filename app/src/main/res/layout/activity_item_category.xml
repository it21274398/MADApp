<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/greadient"
    android:layout_height="match_parent"
    tools:context=".activites.itemCategory">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="829dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="174dp"
                app:srcCompat="@drawable/_907895086152_2" />

            <TextView
                android:id="@+id/FitemId"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/Fitemname"
                android:layout_width="368dp"
                android:layout_height="93dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/sofasidepillow"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHint="#191818"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/Fitemprice"
                android:layout_width="368dp"
                android:layout_height="98dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/price"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHint="#191818"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/Fitemdis"
                android:layout_width="370dp"
                android:layout_height="255dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHint="#191818"
                android:textSize="20sp" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>