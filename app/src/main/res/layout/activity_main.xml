<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/greadient"
    android:layout_height="match_parent"
    tools:context=".activites.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:fontFamily="monospace"
                android:text="@string/proucts"
                android:textAlignment="center"
                android:textColor="#BAB8B8"
                android:textSize="34sp" />

            <Button
                android:onClick="gotToTextileActivity"
                android:id="@+id/button"
                android:layout_width="370dp"
                android:layout_height="110dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#653700B3"
                android:fontFamily="serif"
                android:shadowColor="@color/black"
                android:shadowDx="25"
                android:shadowDy="20"
                android:shadowRadius="25"
                android:text="@string/Textiles"
                android:textColor="#BAB8B8"
                android:textSize="24sp"
                app:cornerRadius="@dimen/borderradius" />

            <Button
                android:onClick="gotoJewelleryActivity"
                android:id="@+id/seeitems"
                android:layout_width="370dp"
                android:layout_height="110dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/butencolor"
                android:fontFamily="serif"
                android:shadowColor="@color/black"
                android:shadowDx="25"
                android:shadowDy="20"
                android:shadowRadius="25"
                android:text="@string/Jewellery"
                android:textColor="@color/btntextcolo"
                android:textSize="24sp"
                app:cornerRadius="@dimen/borderradius" />

            <Button
                android:onClick="gotoKitchendiningActivity"
                android:id="@+id/button3"
                android:layout_width="370dp"
                android:layout_height="110dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#653700B3"
                android:fontFamily="serif"
                android:shadowColor="@color/black"
                android:shadowDx="25"
                android:shadowDy="20"
                android:shadowRadius="25"
                android:text="@string/KitchenDining"
                android:textColor="#BAB8B8"
                android:textSize="24sp"
                app:cornerRadius="@dimen/borderradius" />

            <Button
                android:onClick="gotoWoodenActivity"
                android:id="@+id/button4"
                android:layout_width="370dp"
                android:layout_height="110dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#653700B3"
                android:fontFamily="serif"
                android:shadowColor="@color/black"
                android:shadowDx="25"
                android:shadowDy="20"
                android:shadowRadius="25"
                android:text="@string/WoodenItems"
                android:textColor="#BAB8B8"
                android:textSize="24sp"
                app:cornerRadius="@dimen/borderradius" />

            <Button
                android:onClick="gotoRushreedActivity"
                android:id="@+id/button5"
                android:layout_width="370dp"
                android:layout_height="110dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#653700B3"
                android:fontFamily="serif"
                android:shadowColor="@color/black"
                android:shadowDx="25"
                android:shadowDy="20"
                android:shadowRadius="25"
                android:text="@string/RushReedItems"
                android:textColor="#BAB8B8"
                android:textSize="24sp"
                app:cornerRadius="@dimen/borderradius" />

            <Button
                android:onClick="goAdminAddActivity"
                android:id="@+id/adminseeitems"
                android:layout_width="365dp"
                android:layout_height="63dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Button" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>